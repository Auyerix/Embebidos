#include <stdint.h>
#include <stdbool.h>


typedef uint32_t tick_t;
typedef bool bool_t;

typedef struct{
	tick_t startTime;
	tick_t duration;
	bool_t running;
} delay_t;

/*Definici칩n de funcion delayInit:-----------------------------------------------------------------*/
/*recibir치 un puntero de la structura definida con nombre delay_t para que la fuci칩n se encarge*/
/*de cargar el valor de la segunda variable recibida alojada duration*/


 */
void delayInit( delay_t * delay, tick_t duration );
 /*Definici칩n de funcion delayInit:-----------------------------------------------------------------*/



bool_t delayRead( delay_t * delay );
void delayWrite( delay_t * delay, tick_t duration );
